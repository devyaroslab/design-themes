<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <template id="gourman_website_options_pattern" inherit_id="website.snippet_options">
      <xpath expr="//div[@data-snippet-option-id='background']//ul" position="replace">
          <ul class="dropdown-menu">
            <li data-value="bg-img-01"><a>Image 1</a></li>
            <li data-value="bg-img-02"><a>Image 2</a></li>
            <li data-value="bg-img-03"><a>Image 3</a></li>
            <li data-value="bg-img-04"><a>Image 4</a></li>
            <li data-value="bg-img-05"><a>Image 5</a></li>
            <li data-value="bg-img-06"><a>Image 6</a></li>
            <li data-value="bg-img-07"><a>Image 7</a></li>
            <li data-value="bg-img-08"><a>Image 8</a></li>
            <li data-value="bg-img-09"><a>Image 9</a></li>
            <li data-value="bg-img-10"><a>Image 10</a></li>
            <li data-value="bg-img-11"><a>Image 11</a></li>
            <li data-value="bg-img-12"><a>Image 12</a></li>
            <li data-value=""><a>None</a></li>
            <li><a style="background: none; padding: 5px; border-top: 1px solid #ddd;"></a></li>
            <li class="oe_custom_bg" data-value="oe_img_bg"><a><b>Choose an image...</b></a></li>
          </ul>
      </xpath>

      <xpath expr="//div[@data-snippet-option-id='background']" position="attributes">
        <attribute name="data-selector">section, .carousel, .parallax, .color-block, .color-block4, headerwrap</attribute>
      </xpath>

      <xpath expr="//div[@data-snippet-option-id='background']" position="after">
        <div data-snippet-option-id='timeline'
            data-selector="ul.timeline li"
            data-selector-children="ul.timeline">
        </div>
      </xpath>
    </template>
  </data>
</openerp>